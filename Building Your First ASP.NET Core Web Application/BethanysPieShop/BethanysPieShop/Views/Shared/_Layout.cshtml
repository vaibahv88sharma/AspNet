<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bethany's Pie Shop</title>
    @*<link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />*@
    <link href="~/Content/site.css" rel="stylesheet" />
    @*<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <script src="~/lib/jquery/dist/jquery.js"></script>*@
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="#">BethanysPieShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                @await Component.InvokeAsync("CategoryMenu")
                <li class="nav-item">
                    <a asp-controller="Contact" asp-action="Index">Contact us</a>
                </li>
                @await Component.InvokeAsync("ShoppingCartSummary")
            </ul>
            @await Html.PartialAsync("LoginPartial")
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <p class="lead">
                    <img class="img-fluid" alt="Bethany's Pie Shop" src="~/Images/bethanylogo.png"/>
                </p>
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
